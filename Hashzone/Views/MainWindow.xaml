<Window x:Class="Hashzone.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Hashzone.ViewModels"
        Title="Hashzone" Height="240" Width="360" AllowDrop="True" 
        Icon="/Hashzone;component/1325306667_Drop_Box.ico" WindowStartupLocation="CenterScreen" 
        ResizeMode="CanMinimize" Drop="FileDropEventHandler">
    
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    
    <Grid>
        <Label Content="{Binding Path=Status}" HorizontalAlignment="Left" Margin="12,0,0,0" 
               Name="label1" Height="28" VerticalAlignment="Bottom" />
    </Grid>
    
</Window>
